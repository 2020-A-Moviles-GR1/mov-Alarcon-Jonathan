<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7AFFB300"
    tools:context=".GestionarMedicamentoActivity">

    <ListView
        android:id="@+id/lv_medicamentos"
        android:layout_width="378dp"
        android:layout_height="476dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <Button
        android:id="@+id/btn_verMedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756" />

    <Button
        android:id="@+id/btn_actuaMedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_verMedi"
        app:layout_constraintStart_toEndOf="@+id/btn_verMedi"
        app:layout_constraintTop_toTopOf="@+id/btn_verMedi"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_elimMedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Eliminar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_actuaMedi"
        app:layout_constraintStart_toEndOf="@+id/btn_actuaMedi"
        app:layout_constraintTop_toTopOf="@+id/btn_actuaMedi"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="AtrÃ¡s"
        app:layout_constraintEnd_toEndOf="@+id/btn_elimMedi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_elimMedi"
        app:layout_constraintTop_toBottomOf="@+id/btn_elimMedi" />

</androidx.constraintlayout.widget.ConstraintLayout>