        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/tv_compra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_compra"
        app:layout_constraintTop_toBottomOf="@+id/tv_compra" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="287dp"
        android:layout_height="59dp"
        android:layout_marginBottom="36dp"
        android:text="CaracterÃ­sticas de la Farmacia"
